<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.volkankelleci.petsocialclub.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_mainFragment_to_appFirstScreenFragment"
            app:destination="@id/appFirstScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.volkankelleci.petsocialclub.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/appFirstScreenFragment"
        android:name="com.volkankelleci.petsocialclub.AppFirstScreenFragment"
        android:label="fragment_app_first_screen"
        tools:layout="@layout/fragment_app_first_screen" >
        <action
            android:id="@+id/action_appFirstScreenFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_appFirstScreenFragment_to_profileFillFragment"
            app:destination="@id/profileFillFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFillFragment"
        android:name="com.volkankelleci.petsocialclub.ProfileFillFragment"
        android:label="fragment_profile_fill"
        tools:layout="@layout/fragment_profile_fill" >
        <action
            android:id="@+id/action_profileFillFragment_to_usersHomeFragment"
            app:destination="@id/usersHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/usersHomeFragment"
        android:name="com.volkankelleci.petsocialclub.UsersHomeFragment"
        android:label="fragment_users_home"
        tools:layout="@layout/fragment_users_home" />
</navigation>